<div class="container mt-5" style="width: 70%">
  <h2>Login</h2>
  <form
    action="/user/login"
    method="POST"
    style="width: 100%; margin-top: 50px"
  >
    <div
      class="form-floating mb-3"
      style="width: 100%; display: flex; justify-content: center"
    >
      <input name="email" type="email" style="width: 60%" />
      <label for="floatingInput">Email</label>
    </div>
    <div
      class="form-floating mb-3"
      style="width: 100%; display: flex; justify-content: center"
    >
      <input name="password" type="password" style="width: 60%" />
      <label for="floatingInput">Password</label>
    </div>
    <div
      class="form-floating mb-3"
      style="width: 100%; display: flex; justify-content: center"
    >
      <input
        type="submit"
        class="form-control btn btn-primary mt-5 p-4"
        value="Save"
        style="height: 50px; width: 60%"
      />
    </div>
  </form>
  <div
    class="container1"
    style="width: 100%; height: 20vh; display: grid; place-items: center"
  >
    <a
      style="border: 3px solid; background: #f7f1e3"
      href="/user/github"
      class="btn btn-outline-secondary p-2 mt-3"
      >Login with Github</a
    >
    <a
      style="border: 3px #b33939 solid; background: #f7f1e3"
      href="/user/google"
      class="btn btn-outline-danger p-2 mt-3"
      >Login with Google</a
    >
  </div>
</div>
