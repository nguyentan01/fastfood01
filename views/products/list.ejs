<div class="container mt-5">
  <a type="button" class="btn btn-primary btn-lg" href="/product/add"
    >Add New Product</a
  >
  <h1>List Products</h1>
  <table class="table table-hover">
    <tr>
      <th>Product Name</th>
      <th>Information</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Image</th>
      <th>Category</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
    <% products.map(pro=>{%>
    <tr>
      <td><%= pro.name %></td>
      <td><%= pro.info %></td>
      <td><%= pro.price %></td>
      <td><%= pro.quantity %></td>
      <td>
        <img
          src="<%=  pro.imageSrc %>"
          alt=""
          style="width: 50px; height: 50px"
        />
      </td>
      <td><% if(pro.category){%> <%= pro.category.name %> <%} %></td>
      <td>
        <a href="/product/edit/<%= pro._id %>" class="btn btn-warning">Edit</a>
      </td>
      <td>
        <%- include('../part/deleteForm',{url:`/product/${pro.id}?_method=DELETE`}) %>
      </td>
    </tr>
    <%}) %>
  </table>
</div>
